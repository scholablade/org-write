(defun geography2()
  "Create the widgets from the Widget manual."
  (interactive)
  (switch-to-buffer "*Widget Example*")
  (kill-all-local-variables)
  (make-local-variable 'widget-example-repeat) ; change the state of the variable to local make widget-example-repeat
  (let ((inhibit-read-only t)) ; read-only
    (erase-buffer)) ; erase everything
  (remove-overlays) ; remove overlays
  (widget-insert "Geography\n\n"); 
  (widget-insert "Settings: \n\n"); 
  (widget-create 'editable-field ;
                 :size 13
                 :format "Name: %v \n\n" ; Text after the field!
                 "")
  (widget-insert "Information: \n\n"); 
  (widget-create 'editable-field ;
                 :size 13
                 :format "Date of creation: %s \n\n" ; Text after the field!
                 "")

  (widget-create 'editable-field ;
                 :size 13
                 :format "Date of end: %v \n\n" ; Text after the field!
                 "")
  (widget-create 'editable-field ;
                 :size 13
                 :format "Location type: %v \n\n" ; Text after the field!
                 "")
  (widget-create 'editable-field ;
                 :size 13
                 :format "Population: %v \n\n" ; Text after the field!
                 "")
  (widget-create 'editable-field ;
                 :size 13
                 :format " Size: %v \n\n" ; Text after the field!
                 "")
  (widget-setup)) ; set up the widgets
(defun test()
 (interactive)
 (switch-to-buffer "*Widget Example*")
 (kill-all-local-variables)
 (make-local-variable 'widget-example-repeat) ; change the state of the variable to local make widget-example-repeat
 (let ((inhibit-read-only t)) ; read-only
   (erase-buffer)) ; erase everything
 (remove-overlays) ; remove overlays
 (let ((counter 0)(field-names '("Name" "Other")))
   (while (< counter 2)
(widget-create 'editable-field
                    :size 13
                    :format (format "%s: %%v \n\n" (nth counter field-names) ""))  
 (setq counter (1+ counter))
 (widget-setup)) ; set up the widgets
 ))
